{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": [
			"dom",
			"dom.iterable",
			"ESNext"
		],
		"module": "preserve",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"paths": {
			"~/*": [
				"./src/*"
			],
			"infrastructure/*": [
				"./infrastructure/*"
			]
		},
		"preserveWatchOutput": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2024",
		"types": [
			"vite/client"
		],
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"vite.config.js",
		"tailwind.config.ts"
	],
}